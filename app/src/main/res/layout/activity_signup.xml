<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/svSignUp">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/llSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context=".SignUpActivity">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:contentDescription="@string/str_companyname_name"
            android:minHeight="150dp"
            app:srcCompat="@drawable/ic_appicon" />

        <EditText
            android:id="@+id/tbName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/str_displayname_name"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:autofillHints="Enter your name" />

        <EditText
            android:id="@+id/tbEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/str_email"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:autofillHints="Enter your email" />

        <EditText
            android:id="@+id/tbPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/str_password"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:autofillHints="Enter your password" />

        <EditText
            android:id="@+id/tbConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/str_confirmpassword_name"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:autofillHints="Enter same password" />

        <Button
            android:id="@+id/btSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="#4CAF50"
            android:shadowRadius="10"
            android:text="@string/str_signup_name"
            android:onClick="logicSignUp" />

    </LinearLayout>

</ScrollView>